@model IEnumerable<Transporte.Models.Cliente>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ClienteIndex</title>
</head>
<body>
    @*<section class="content-header">
            <h1>
                Listado de Clientes
            </h1>
        </section>*@
    <section class="text-center">
        <h4>Listado de Clientes</h4>
    </section>
    <section class="content">
        <p>
            @Html.ActionLink("Nuevo Cliente", "ClienteCreate")
        </p>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <table id="example" class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdCliente)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Razon)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Documento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Contacto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Celular)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Estado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdUsuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tipo_Documento)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdCliente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Razon)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Documento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contacto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Celular)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdUsuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tipo_Documento)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "ClienteUpdate", new { id = item.IdCliente }) |
                                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                                        @Html.ActionLink("Eliminar", "ClienteDelete", new { id = item.IdCliente })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
